import pandas as pd
import matplotlib.pyplot as plt

plt.style.use('ggplot')
df = pd.read_csv("../data/movies.csv")
df.head()
df.info()
df.describe()
genre_count = df['genre'].value_counts()

plt.figure(figsize=(10,4))
genre_count.plot(kind='bar')
plt.title("Genre Popularity")
plt.xlabel("Genre")
plt.ylabel("Number of Movies")
plt.show()

genre_count
plt.figure(figsize=(10,4))
plt.hist(df['rating'], bins=10)
plt.title("Rating Distribution")
plt.xlabel("Rating")
plt.ylabel("Count")
plt.show()
plt.figure(figsize=(10,5))
plt.scatter(df['budget'], df['revenue'])
plt.title("Budget vs Revenue")
plt.xlabel("Budget")
plt.ylabel("Revenue")
plt.show()
correlation = df[['budget', 'revenue', 'rating']].corr()
correlation
print("ðŸŽ¬ MOVIE INSIGHTS SUMMARY")
print("1. Most common genre:", genre_count.idxmax())
print("2. Highest rated movie:", df.loc[df['rating'].idxmax(), 'title'])
print("3. Highest revenue movie:", df.loc[df['revenue'].idxmax(), 'title'])
print("\nCorrelation Matrix:")
print(correlation)

